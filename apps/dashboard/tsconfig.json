{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "types": ["node", "react", "react-dom"],
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sparkset/core/*": ["../../packages/core/src/*"],
      "@sparkset/ai/*": ["../../packages/ai/src/*"],
      "@sparkset/utils/*": ["../../packages/utils/src/*"],
      "@sparkset/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    "tailwind.config.ts",
    "postcss.config.mjs"
  ],
  "exclude": ["node_modules"]
}
