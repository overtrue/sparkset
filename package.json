{
  "name": "sparkset",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo watch dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
